VERSION=1

. ./config

sed -i '/add_hostname4 (str, hostname, use_fqdn)/d' src/dhcp/nm-dhcp-dhclient-utils.c

sed -i '/fqdn_expected =/,/send fqdn.server-update/{/send fqdn.fqdn/,/send fqdn.server-update/d;}' src/dhcp/tests/test-dhcp-dhclient.c

sed -i '/fqdn_options_override_expected =/,/send fqdn.server-update/{/send fqdn.fqdn/,/send fqdn.server-update/d;}' src/dhcp/tests/test-dhcp-dhclient.c

sed -i '/override_hostname_expected/,/send host-name/{/send host-name/d;}' src/dhcp/tests/test-dhcp-dhclient.c

changelog "Never send hostname in DHCP requests"

compile

