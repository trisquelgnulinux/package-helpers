VERSION=3
EXTERNAL='deb-src http://ppa.launchpad.net/scribus/ppa/ubuntu bionic main '
REPOKEY=B70D6F7664B6EE15
BACKPORTS=true

. ./config

# Revert (partial) removal of non-free patch
sed -i 's|^#remove_non-free_file.patch$|remove_non-free_file.patch|1' debian/patches/series
sed -i 's|^do-not-install-dicts$|#do-not-install-dicts|1' debian/patches/series

# Remove building non-free docs package
sed -i '/Package: scribus-doc/,$d' debian/control # scribus-doc is the last package in the control file

changelog "Backported from ppa"

changelog "Revert non-free parts of the package"

compile
