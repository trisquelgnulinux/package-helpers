BACKPORT=true
BUILD_UNTIL=10.0

. ./config

#Force non-backports inkscape version
sed -i "s|inkscape|inkscape (<= 0.93)|" debian/control
sed -i "s|Utility|Network|" mirall.desktop.in

changelog "Imported into Trisquel"

compile
