VERSION=1

. ./config

# Change plymouth logo
for ((i=1;i<=60;i++));
do
    rm usr/share/plymouth/themes/ubuntukylin-logo/$i.png
    cp $DATA/logo-trisquel.png \
        usr/share/plymouth/themes/ubuntukylin-logo/$i.png
done
rm usr/share/plymouth/themes/ubuntukylin-logo/uk.png
sed -i 's|uk.png|tk.png|' \
    usr/share/plymouth/themes/ubuntukylin-logo/ubuntukylin-logo.script
cp $DATA/tk.png \
   usr/share/plymouth/themes/ubuntukylin-logo/

# Change plymouth text
sed -i "s|title=.*|title=Trisquel Kylin $REVISION|" \
    usr/share/plymouth/themes/ubuntukylin-text/ubuntukylin-text.plymouth
sed -i "s|ubuntu-text|trisquel-text|g" \
    usr/share/plymouth/themes/ubuntukylin-text/ubuntukylin-text.plymouth

changelog "Rebranding for trisquel."

compile
